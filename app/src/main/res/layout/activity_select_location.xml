<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_location_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Search Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:radius="24dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search here"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/btn_voice_search"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_mic"
                android:contentDescription="Voice Search"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Recent Search -->
    <LinearLayout
        android:id="@+id/recent_search_container"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/search_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent search"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/recent1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:text="Surabaya"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_history"
            android:drawablePadding="8dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/recent2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:text="Banjarmasin"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_history"
            android:drawablePadding="8dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/recent3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:text="Yogyakarta"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_history"
            android:drawablePadding="8dp"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- Map View -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/recent_search_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Current Location Button -->
    <ImageButton
        android:id="@+id/btn_current_location"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:backgroundTint="@android:color/white"
        android:src="@drawable/ic_location"
        android:background="@drawable/bg_circle_button"
        android:contentDescription="My Location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
